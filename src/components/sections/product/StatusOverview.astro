---
/**
 * StatusOverview - System status and incident history display
 *
 * @description
 * Displays service status list, overall status banner, incident history,
 * and subscription options for status updates.
 *
 * @example Basic usage
 * ```astro
 * <StatusOverview
 *   services={[
 *     { name: "API", status: "operational" },
 *     { name: "Website", status: "operational" },
 *   ]}
 * />
 * ```
 */

type ServiceStatus = 'operational' | 'degraded' | 'partial' | 'major' | 'maintenance';
type IncidentStatus = 'resolved' | 'investigating' | 'identified' | 'monitoring';

interface Service {
  /** Service name */
  name: string;
  /** Current status */
  status: ServiceStatus;
}

interface IncidentUpdate {
  /** Time of update */
  time: string;
  /** Update message */
  message: string;
}

interface Incident {
  /** Incident date */
  date: string;
  /** Incident title */
  title: string;
  /** Current status */
  status: IncidentStatus;
  /** Description */
  description: string;
  /** Timeline of updates */
  updates: IncidentUpdate[];
}

interface Props {
  /** Array of services with status */
  services: Service[];
  /** Recent incidents */
  incidents?: Incident[];
  /** Twitter URL for updates */
  twitterUrl?: string;
  /** Support email for notifications */
  supportEmail?: string;
  /** Section background style */
  background?: 'default' | 'muted' | 'accent';
  /** Language for labels (es = Spanish) */
  lang?: 'en' | 'es';
}

const { services, incidents = [], twitterUrl, supportEmail, background = 'default', lang = 'en' } = Astro.props;

const labels = {
  en: {
    allOperational: 'All Systems Operational',
    someIssues: 'Some Systems Experiencing Issues',
    lastUpdated: 'Last updated',
    services: 'Services',
    incidents: 'Recent Incidents',
    noIncidents: 'No incidents reported in the last 30 days.',
    stayUpdated: 'Stay Updated',
    stayUpdatedDesc: 'Get notified about scheduled maintenance and incidents.',
    followTwitter: 'Follow on Twitter',
    emailNotifications: 'Email Notifications',
    operational: 'Operational',
    degraded: 'Degraded Performance',
    partial: 'Partial Outage',
    major: 'Major Outage',
    maintenance: 'Under Maintenance',
    resolved: 'Resolved',
    investigating: 'Investigating',
    identified: 'Identified',
    monitoring: 'Monitoring',
  },
  es: {
    allOperational: 'Todos los sistemas operativos',
    someIssues: 'Algunos sistemas presentan incidencias',
    lastUpdated: 'Última actualización',
    services: 'Servicios',
    incidents: 'Incidencias recientes',
    noIncidents: 'No se han reportado incidencias en los últimos 30 días.',
    stayUpdated: 'Mantente informado',
    stayUpdatedDesc: 'Recibe avisos de mantenimiento programado e incidencias.',
    followTwitter: 'Seguir en X',
    emailNotifications: 'Notificaciones por correo',
    operational: 'Operativo',
    degraded: 'Rendimiento degradado',
    partial: 'Fallo parcial',
    major: 'Fallo mayor',
    maintenance: 'En mantenimiento',
    resolved: 'Resuelto',
    investigating: 'Investigando',
    identified: 'Causa identificada',
    monitoring: 'En monitoreo',
  },
};
const t = labels[lang];

const bgClass = {
  default: 'bg-background',
  muted: 'bg-surface',
  accent: 'bg-primary/5',
}[background];

const statusConfig: Record<ServiceStatus, { color: string; textColor: string }> = {
  operational: { color: 'bg-green-500', textColor: 'text-green-600 dark:text-green-400' },
  degraded: { color: 'bg-yellow-500', textColor: 'text-yellow-600 dark:text-yellow-400' },
  partial: { color: 'bg-orange-500', textColor: 'text-orange-600 dark:text-orange-400' },
  major: { color: 'bg-red-500', textColor: 'text-red-600 dark:text-red-400' },
  maintenance: { color: 'bg-blue-500', textColor: 'text-blue-600 dark:text-blue-400' },
};
const statusLabelKey: Record<ServiceStatus, keyof typeof labels.en> = {
  operational: 'operational',
  degraded: 'degraded',
  partial: 'partial',
  major: 'major',
  maintenance: 'maintenance',
};
const incidentLabelKey: Record<IncidentStatus, keyof typeof labels.en> = {
  resolved: 'resolved',
  investigating: 'investigating',
  identified: 'identified',
  monitoring: 'monitoring',
};

const incidentStatusColors: Record<IncidentStatus, string> = {
  resolved: 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200',
  investigating: 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200',
  identified: 'bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-200',
  monitoring: 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200',
};

const allOperational = services.every((s) => s.status === 'operational');
---

<section class:list={['py-section', bgClass]}>
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Overall Status Banner -->
    <div
      class:list={[
        'p-6 rounded-lg mb-6 text-center',
        allOperational
          ? 'bg-green-100 dark:bg-green-950 border border-green-300 dark:border-green-800'
          : 'bg-yellow-100 dark:bg-yellow-950 border border-yellow-300 dark:border-yellow-800',
      ]}
    >
      <div class="flex items-center justify-center gap-3">
        {
          allOperational ? (
            <>
              <span class="w-3 h-3 rounded-full bg-green-500" />
              <span class="text-lg font-semibold text-green-900 dark:text-green-100">
                {t.allOperational}
              </span>
            </>
          ) : (
            <>
              <span class="w-3 h-3 rounded-full bg-yellow-500" />
              <span class="text-lg font-semibold text-yellow-900 dark:text-yellow-100">
                {t.someIssues}
              </span>
            </>
          )
        }
      </div>
      <p
        class:list={[
          'mt-2 text-sm',
          allOperational
            ? 'text-green-900 dark:text-green-100'
            : 'text-yellow-900 dark:text-yellow-100',
        ]}
      >
        {t.lastUpdated}: {
          new Date().toLocaleString(lang === 'es' ? 'es-ES' : 'en-US', { dateStyle: 'medium', timeStyle: 'short' })
        } UTC
      </p>
    </div>

    <!-- Service Status List -->
    <div class="rounded-lg border border-border overflow-hidden">
      <div class="bg-surface px-4 py-3 border-b border-border">
        <h2 class="font-semibold text-text">{t.services}</h2>
      </div>
      <div class="divide-y divide-border">
        {
          services.map((service) => {
            const config = statusConfig[service.status];
            const label = t[statusLabelKey[service.status]];
            return (
              <div class="flex items-center justify-between px-4 py-4 bg-background">
                <span class="text-text">{service.name}</span>
                <div class="flex items-center gap-2">
                  <span class:list={['text-sm font-medium', config.textColor]}>{label}</span>
                  <span class:list={['w-2.5 h-2.5 rounded-full', config.color]} />
                </div>
              </div>
            );
          })
        }
      </div>
    </div>

    <!-- Incident History -->
    <div class="mt-8">
      <h2 class="text-xl font-bold text-text mb-4">{t.incidents}</h2>

      {
        incidents.length > 0 ? (
          <div class="space-y-6">
            {incidents.map((incident) => (
              <div class="rounded-lg border border-border overflow-hidden">
                <div class="bg-surface px-4 py-3 border-b border-border">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                    <h3 class="font-semibold text-text">{incident.title}</h3>
                    <div class="flex items-center gap-2">
                      <span class="text-sm text-text-muted">{incident.date}</span>
                      <span
                        class:list={[
                          'px-2 py-0.5 text-xs font-medium rounded-full',
                          incidentStatusColors[incident.status],
                        ]}
                      >
                        {t[incidentLabelKey[incident.status]]}
                      </span>
                    </div>
                  </div>
                  <p class="mt-2 text-sm text-text-muted">{incident.description}</p>
                </div>
                <div class="px-4 py-3 bg-background">
                  <div class="space-y-3">
                    {incident.updates.map((update) => (
                      <div class="flex gap-3 text-sm">
                        <span class="text-text-muted font-mono whitespace-nowrap">
                          {update.time}
                        </span>
                        <span class="text-text">{update.message}</span>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-8 px-4 rounded-lg border border-border">
            <p class="text-text-muted">{t.noIncidents}</p>
          </div>
        )
      }
    </div>

    <!-- Subscribe to Updates -->
    {
      (twitterUrl || supportEmail) && (
        <div class="mt-8 p-6 rounded-lg bg-surface border border-border text-center">
          <h3 class="text-lg font-semibold text-text">{t.stayUpdated}</h3>
          <p class="mt-2 text-text-muted">
            {t.stayUpdatedDesc}
          </p>
          <div class="mt-4 flex flex-col sm:flex-row gap-3 justify-center">
            {twitterUrl && (
              <a
                href={twitterUrl}
                class="inline-flex items-center justify-center px-4 py-2 rounded-md border border-border text-text font-medium hover:bg-background transition-colors text-sm"
              >
                {t.followTwitter}
              </a>
            )}
            {supportEmail && (
              <a
                href={`mailto:${supportEmail}?subject=${lang === 'es' ? 'Suscripción a avisos de estado' : 'Subscribe to Status Updates'}`}
                class="inline-flex items-center justify-center px-4 py-2 rounded-md border border-border text-text font-medium hover:bg-background transition-colors text-sm"
              >
                {t.emailNotifications}
              </a>
            )}
          </div>
        </div>
      )
    }

    {
      lang === 'en' && (
        <p class="mt-8 text-sm text-text-muted text-center">
          This is a placeholder status page. For production, consider using a dedicated service like{' '}
          <a href="https://www.atlassian.com/software/statuspage" class="text-primary hover:underline">Statuspage</a>,{' '}
          <a href="https://instatus.com" class="text-primary hover:underline">Instatus</a>, or{' '}
          <a href="https://betteruptime.com" class="text-primary hover:underline">Better Uptime</a>.
        </p>
      )
    }
  </div>
</section>
