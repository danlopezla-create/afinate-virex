---
/**
 * Login Page
 *
 * @description
 * User login page with email/password form and social authentication options.
 * Uses demo mode by default - configure action prop on LoginForm for real backend.
 */
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import LoginForm from '@forms/LoginForm.astro';
import SocialAuthButtons from '@forms/SocialAuthButtons.astro';
import { siteConfig } from '@/config';
---

<MarketingLayout
  title={`Iniciar sesión - ${siteConfig.name}`}
  description="Inicia sesión en tu cuenta para acceder al panel y gestionar tus proyectos."
>
  <section class="py-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-md mx-auto">
        <!-- Card container -->
        <div class="bg-surface rounded-lg border border-border p-8 shadow-sm">
          <!-- Header -->
          <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-text">Bienvenido de nuevo</h1>
            <p class="mt-2 text-text-muted">Inicia sesión en tu cuenta para continuar</p>
          </div>

          <!-- Login Form -->
          <LoginForm />

          <!-- Social Auth: Microsoft + Google -->
          <SocialAuthButtons dividerText="O continuar con" variant="login" />

          <!-- Register link -->
          <p class="mt-6 text-center text-sm text-text-muted">
            ¿No tienes cuenta?{' '}
            <a
              href="/register"
              class="font-medium text-primary hover:text-primary-dark transition-colors"
            >
              Regístrate
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
