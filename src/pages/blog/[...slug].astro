---
import BlogLayout from '@/layouts/BlogLayout.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';
import { siteConfig } from '@/config';
import { calculateReadingTime } from '@/lib/utils';

type BlogPost = CollectionEntry<'blog'>;

// En modo server (output: 'server') getStaticPaths se ignora; hay que resolver el post por slug en cada request.
const slugParam = Astro.params.slug;
const slug = typeof slugParam === 'string' ? slugParam : Array.isArray(slugParam) ? slugParam.join('/') : '';
if (!slug) {
  return Astro.redirect('/404');
}

const allPosts = await getCollection('blog', ({ data }: { data: BlogPost['data'] }) => !data.draft);
const post = allPosts.find((p: BlogPost) => p.id === slug);
if (!post) {
  return Astro.redirect('/404');
}

const { Content } = await render(post);

// Posts relacionados (misma lógica de visibilidad: no draft)
const visiblePosts = allPosts;
const relatedPosts: BlogPost[] = visiblePosts
  .filter((p: BlogPost) => p.id !== post.id)
  .map(
    (p: BlogPost): { post: BlogPost; sharedTags: number } => ({
      post: p,
      sharedTags: p.data.tags.filter((tag: string) => post.data.tags.includes(tag)).length,
    })
  )
  .filter((p: { post: BlogPost; sharedTags: number }) => p.sharedTags > 0)
  .sort((a, b) => {
    if (b.sharedTags !== a.sharedTags) return b.sharedTags - a.sharedTags;
    return b.post.data.publishedDate.getTime() - a.post.data.publishedDate.getTime();
  })
  .slice(0, 3)
  .map((p: { post: BlogPost }) => p.post);
---

<BlogLayout
  title={`${post.data.title} - ${siteConfig.name}`}
  description={post.data.description}
  publishedDate={post.data.publishedDate}
  author={post.data.author}
  image={post.data.image}
  tags={post.data.tags}
  content={post.body || ''}
>
  <Content slot="content" />

  <!-- Related Posts -->
  {
    relatedPosts.length > 0 && (
      <aside class="mt-16 pt-12 border-t border-border">
        <h2 class="text-2xl font-bold text-text mb-8">Entradas relacionadas</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost) => (
            <a href={`/blog/${relatedPost.id}`} class="group block">
              <article class="h-full p-4 rounded-lg border border-border hover:border-primary transition-colors">
                <div class="text-sm text-text-muted mb-2">
                  {relatedPost.data.publishedDate.toLocaleDateString('es-ES', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                  <span class="mx-1">·</span>
                  {calculateReadingTime(relatedPost.body || '')} min de lectura
                </div>
                <h3 class="font-semibold text-text group-hover:text-primary transition-colors line-clamp-2">
                  {relatedPost.data.title}
                </h3>
                <p class="mt-2 text-sm text-text-muted line-clamp-2">
                  {relatedPost.data.description}
                </p>
              </article>
            </a>
          ))}
        </div>
      </aside>
    )
  }
</BlogLayout>
