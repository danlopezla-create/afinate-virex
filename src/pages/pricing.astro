---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import PricingTable from '@sections/pricing/PricingTable.astro';
import TrustBadges from '@sections/pricing/TrustBadges.astro';
import { siteConfig } from '@/config';

const plans = [
  {
    name: 'Básico',
    monthlyPrice: 0,
    description: 'Para proyectos personales',
    features: [
      'Acceso al equipo financiero de IA',
      'Acceso limitado al tablero inteligente',
      'Hasta 50 documentos procesados',
    ],
    highlighted: false,
    cta: { label: 'Regístrate gratis', href: '/register' },
  },
  {
    name: 'Pyme',
    monthlyPrice: 490000,
    description: 'Para empresas sin sistema contable o ERP',
    features: [
      'Acceso al equipo financiero de IA',
      'Acceso completo al tablero inteligente',
      'Hasta 500 documentos procesados',
      'Hasta 300 consultas con la IA',
      'Servicio al cliente 24/7',
    ],
    highlighted: true,
    badge: 'Recomendado',
    cta: { label: 'Adquierelo ya', href: '/register' },
  },
  {
    name: 'ERP',
    monthlyPrice: null,
    customPrice: 'Personalizado',
    description: 'Para empresas con sistema contable o ERP',
    features: [
      'Acceso al equipo financiero de IA',
      'Acceso a un tablero personalizado',
      'Documentos procesados ilimitados',
      'Consultas ilimitadas con la IA',
      'Servicio al cliente personalizado',
    ],
    highlighted: false,
    cta: { label: 'Solicitar demo', href: '/demo' },
  },
];
---

<MarketingLayout
  title={`Precio - ${siteConfig.name}`}
  description="Precios simples y transparentes. Empieza gratis y escala cuando crezcas."
>
  <PricingTable
    title="Precios simples y transparentes"
    subtitle="Empieza gratis y escala cuando crezcas. Sin costes ocultos, sin sorpresas."
    plans={plans}
    annualDiscount={20}
    defaultPeriod="monthly"
    currency="COP"
    monthlyLabel="Mensual"
    annualLabel="Anual"
    perMonthLabel="/ mensual"
  />

  <TrustBadges
    variant="compact"
    guarantee={{
      title: 'Garantía de reembolso de 30 días',
      description:
        'Prueba sin riesgo. ¿No satisfecho? Obtén un reembolso completo de tu prueba, sin preguntas.',
    }}
    badges={[
      { icon: 'lucide:shield-check', label: 'Checkout seguro' },
      { icon: 'lucide:lock', label: 'Cifrado SSL 256 bits' },
      { icon: 'lucide:credit-card', label: 'Cumplimiento PCI' },
      { icon: 'lucide:smartphone', label: 'Pago con Wompi (PSE, tarjetas)' },
    ]}
    paymentMethods={[
      { name: 'Wompi', logo: '/images/payments/LOGO-WOMPI-BC.png' },
      { name: 'PSE', logo: '/images/payments/pse-logo.webp' },
      { name: 'Visa', logo: '/images/payments/visa.svg' },
      { name: 'Mastercard', logo: '/images/payments/mastercard.svg' },
    ]}
    paymentNote="Pago seguro con Wompi: PSE, tarjetas débito y crédito (Visa, Mastercard)."
  />
  </div>

  <!-- Secciones ocultas: Compara los planes, Preguntas frecuentes, ¿Necesitas algo personalizado? -->
</MarketingLayout>
