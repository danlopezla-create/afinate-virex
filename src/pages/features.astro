---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import FeatureHighlight from '@sections/marketing/FeatureHighlight.astro';
import { siteConfig } from '@/config';

const highlightedFeatures = [
  {
    title: 'Lucía - Asistente Contable de IA',
    description:
      'Lucía procesa facturas, recibos y extractos bancarios de forma autónoma, organizando tu libro mayor y garantizando que tu contabilidad esté siempre al día.',
    image: '/Lucia-Asistente%20Contable%20de%20IA.png',
    badge: 'La Base',
    highlights: [
      'Recepciona documentos vía WhatsApp o app',
      'Extrae de los documentos los datos clave',
      'Automatiza la contabilidad',
      'Concilia bancos de manera autónoma',
    ],
    cta: { label: 'Saber más', href: '/docs#lucia' },
    productId: 'lucia',
  },
  {
    title: 'Sofía - Analista Financiero de IA',
    description:
      'Sofía toma la información organizada de Lucía para construir los estados financieros básicos: estado de resultados, balance general y flujo de caja.',
    image: '/Sofia-Analista%20Financiera%20de%20IA.png',
    badge: 'El Rendimiento',
    highlights: [
      'Construye estados financieros históricos',
      'Proyecta estados financieros futuros',
    ],
    cta: { label: 'Saber más', href: '/docs#sofia' },
    productId: 'sofia',
  },
  {
    title: 'María - Gerente Financiero de IA',
    description:
      'María toma la información generada por Sofía y revisa el desempeño financiero de tu empresa, proponiendo soluciones mientras recibe consultas de alto nivel.',
    image: '/Maria-Gerente%20Financiera%20de%20IA.png',
    badge: 'El Experto',
    highlights: [
      'Controla la desviación presupuestal',
      'Redefine metas y objetivos',
      'Responde consultas con el contexto de tu empresa',
    ],
    cta: { label: 'Saber más', href: '/docs#maria' },
    productId: 'maria',
  },
];
---

<MarketingLayout
  title={`Producto - ${siteConfig.name}`}
  description="Lucía, Sofía y María: asistentes de contabilidad, análisis y gestión financiera."
>
  <FeatureHighlight
    features={highlightedFeatures}
    background="muted"
    compact={true}
  />
</MarketingLayout>
