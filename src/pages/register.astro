---
/**
 * Register Page
 *
 * @description
 * User registration page with form and social authentication options.
 * Uses demo mode by default - configure action prop on RegisterForm for real backend.
 */
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import RegisterForm from '@forms/RegisterForm.astro';
import SocialAuthButtons from '@forms/SocialAuthButtons.astro';
import { siteConfig } from '@/config';
---

<MarketingLayout
  title={`Crear cuenta - ${siteConfig.name}`}
  description="Crea tu cuenta gratis y empieza a usar nuestra plataforma hoy."
>
  <section class="py-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-md mx-auto">
        <!-- Card container -->
        <div class="bg-surface rounded-lg border border-border p-8 shadow-sm">
          <!-- Header -->
          <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-text">Crea tu cuenta</h1>
            <p class="mt-2 text-text-muted">Empieza tu prueba gratis hoy</p>
          </div>

          <!-- Register Form -->
          <RegisterForm />

          <!-- Social Auth: Microsoft + Google -->
          <SocialAuthButtons dividerText="O regístrate con" variant="register" />

          <!-- Login link -->
          <p class="mt-6 text-center text-sm text-text-muted">
            ¿Ya tienes cuenta?{' '}
            <a
              href="/login"
              class="font-medium text-primary hover:text-primary-dark transition-colors"
            >
              Iniciar sesión
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
