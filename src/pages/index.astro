---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import Hero from '@sections/marketing/Hero.astro';
import HowItWorks from '@sections/marketing/HowItWorks.astro';
import Newsletter from '@sections/marketing/Newsletter.astro';
import { siteConfig } from '@/config';
---

<MarketingLayout
  title={`${siteConfig.name} - ${siteConfig.description}`}
  description={siteConfig.description}
>
  <Hero
    title="Procesos Autónomos para tu Empresa"
    subtitle="Trabaja con la confianza de tener empleados expertos al alcance de una suscripción."
    primaryCTA={{ label: 'Comenzar gratis', href: '/register' }}
    secondaryCTA={{ label: 'Ver demo', href: '/dashboard' }}
    backgroundType="video"
    backgroundVideo="/Golde-Rain-Code.mp4"
    overlay={true}
    overlayOpacity={72}
    textColor="light"
  />

  <HowItWorks
    title="En 3 pasos sencillos"
    subtitle="De la idea a la producción en pocos minutos."
    steps={[
      {
        title: 'Regístrate e inicia sesión',
        description:
          'Diligencia tu nombre, correo electrónico y contraseña.',
        icon: 'lucide:user-plus',
      },
      {
        title: 'Envía tu información',
        description:
          'Comparte desde WhatsApp o la app; facturas, recibos y extractos bancarios.',
        icon: 'simple-icons:whatsapp',
      },
      {
        title: 'Revisa y ejecuta',
        description: 'Verifica tu contabilidad y despliega tu estrategia de la mano de tu equipo experto.',
        icon: 'lucide:rocket',
      },
    ]}
    variant="horizontal"
    background="muted"
  />

  <section id="descarga-app" aria-label="Descarga app y novedades">
    <Newsletter />
  </section>
</MarketingLayout>
